{{#if updateItem}}
<div>
 <form>
   <div class="form-group">
     <label for="name">name</label>
     {{input value=name id=name}}
   </div>

   <div class="form-group">
     <label for="description">description</label>
     {{input value=description id=description}}
   </div>

   <div class="form-group">
     <label for="cost">cost</label>
     {{input value=cost id=cost}}
   </div>

   <div class="form-group">
     <label for="image">image</label>
     {{input value=image id=image}}
   </div>
 </form>
</div>
<button {{action 'update' item}}>update</button>
{{else}}
<button {{action 'updateItemForm'}}>update</button>
{{/if}}
